<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        style="@style/st_titre1"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="Authentification"
        android:textColor="#863A6F" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="169dp"
        android:layout_height="123dp"
        android:layout_marginLeft="110dp"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/one" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Email"
        android:textColor="#D989B5"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/ed_mail_auth"
        android:layout_width="match_parent"
        android:layout_height="39dp"

        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Password"
        android:textColor="#D989B5
"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/ed_pass_auth"
        android:layout_width="match_parent"
        android:layout_height="39dp"

        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_val_auth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#975C8D"
            android:text="SUBMIT"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_quit_auth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#975C8D
"
            android:text="Quit"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>